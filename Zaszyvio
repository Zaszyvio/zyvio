<script>
  function addProduct(event) {
    event.preventDefault();

    const name = document.getElementById('product-name').value;
    const price = document.getElementById('product-price').value;
    const image = document.getElementById('product-image').value;
    const link = document.getElementById('product-link').value;
    const category = document.getElementById('product-category').value;

    const productHTML = `
      <div class="product" data-category="${category}">
        <img src="${image}" />
        <h3>${name}</h3>
        <p>${price}</p>
        <a href="${link}" target="_blank">查看商品</a>
      </div>
    `;

    const container = document.querySelector(`#${category} .products`);
  if (container) {
    container.insertAdjacentHTML('beforeend', productHTML);
    alert('✅ 商品已添加！');
  } else {
    alert('❌ 无法找到对应的分类容器');
  }

  event.target.reset();
}
</script>


<script>
  let secretClickCount = 0;
  let secretClickTimeout;

  document.getElementById("footer-secret").addEventListener("click", () => {
    secretClickCount++;
    clearTimeout(secretClickTimeout);

    secretClickTimeout = setTimeout(() => {
      secretClickCount = 0;
    }, 1000);

    if (secretClickCount === 5) {
      secretClickCount = 0;
      const password = prompt("请输入管理员密码：");
      if (password === "Atcs.051711") {
        const adder = document.getElementById("add-product-section");
        if (adder) adder.style.display = "block";
      } else {
        alert("密码错误 ❌");
      }
    }
  });
</script>

